package kodlama.io;

import entities.Courses;
import entities.Product;
import java.util.ArrayList;
import java.util.List;

import business.CourseManager;
import business.ProductManager;
import core.logging.DatabaseLogger;
import core.logging.FileLogger;
import core.logging.Logger;
import core.logging.MailLogger;
import dataAccess.HibernateProduct;

public class Main {

	public static void main(String[] args) throws Exception {
		// TODO Auto-generated method stub
	
		List<Courses> courses = new ArrayList<>();
		Courses course1 = new Courses(1,"java","programlama",-1,"engin demirog");
		
		
		
		Logger[] loggers = {new DatabaseLogger(), new FileLogger(), new MailLogger()};
		for (Courses crs : courses) {
			System.out.println(crs.getName());
		}
		CourseManager courseManager = new CourseManager(new HibernateProduct(), loggers,courses);
		courseManager.add(course1);
		courses.add(course1);
		Courses course2 = new Courses(2,"iletisim","kisisel",10,"x");
		courseManager.add(course2);
		courses.add(course2);

	 
	}

}
